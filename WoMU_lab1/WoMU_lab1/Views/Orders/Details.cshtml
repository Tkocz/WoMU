@model WoMU_lab1.Models.Order

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderFName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderFName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderSName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderSName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderCity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderCity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderZipCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderZipCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderPhone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderPhone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderEmail)
        </dd>
    </dl>
        <table>
            <tr>
                <td>
                    Artikel
                </td>
                <td>
                    Styckpris
                </td>
                <td>
                    Antal
                </td>
            </tr>
            @foreach (var item in Model.OrderDetails)
            {

                <tr>
                    <td>
                        @item.Article.ArticleName
                    </td>
                    <td>
                        @item.Article.ArticlePrice
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                </tr>

            }
            <tr>
                <td style="width: 100px;">
                    VAT (25%)
                </td>
                <td>
                    @(Model.OrderTotal * (decimal)0.25)
                </td>
            </tr>
            <tr>
                <td>
                    <b>Total:</b>
                </td>
                <td>
                    @(Model.OrderTotal * (decimal)1.25) (incl. VAT)
                </td>
            </tr>
        </table>
    
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.OrderId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
